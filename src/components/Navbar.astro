<header>
    <img class="logo" src="/ipsum.svg" />
    <button class="search">
        <img src="/search.svg" class="search-icon" alt="" />
    </button>
    <button class="open">
        <img src="/burger-menu.svg" class="hamburger-icon" alt="" />
    </button>
    <nav class="nav">
        <button class="close">
            <img src="/close.svg" class="close-icon" alt="" />
        </button>
        <ul class="nav__list">
            <li class="li__1"><a href="#">Pel√≠culas</a></li>
            <li class="li__2"><a href="#">Series</a></li>
            <li class="li__3"><a href="#">Celebridades</a></li>
            <li class="li__4"><a href="#">Contacto</a></li>
        </ul>
    </nav>
</header>
<style>
    :root {
        --my-bordeaux: oklch(0.3596 0.147571 29.2339);
        --my-red: oklch(0.5161 0.2019 25.94);
        --my-beige: oklch(0.9584 0.0381 85.35);
        --my-dark-blue: oklch(0.2938 0.0656 238.47);
        --my-light-blue: oklch(0.665 0.0747 236.79);
        --my-grey: oklch(0.15 0.01 0);
    }
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }
    html,
    body {
        margin: 0;
        padding: 0;
    }
    html {
        font-family: 'Roboto', sans-serif;
        font-size: 20px;
    }

    body {
        min-height: 100vh;
        line-height: 1.5;
        background-color: var(--my-grey);
    }

    img,
    svg {
        display: block;
        max-width: 100%;
    }

    button {
        font: inherit;
        background: transparent;
        border: none;
        cursor: pointer;
    }

    header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem;
        background-color: var(--my-bordeaux);
        width: 100%;
    }

    .logo {
        width: 30%;
    }

    .hamburger-icon,
    .close-icon,
    .search-icon {
        width: 32px;
        height: 32px;
    }

    .open {
        position: relative;
    }

    .nav {
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        padding: 2rem;
        gap: 1rem;
        background-color: var(--my-bordeaux);
        opacity: 0;
        visibility: hidden;
        transform: translateX(100%);
        transition:
            opacity 0.3s ease,
            transform 0.3s ease;
        pointer-events: none;
    }

    .nav.visible {
        opacity: 1;
        visibility: visible;
        transform: translateX(0);
        pointer-events: auto;
    }

    .nav__list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        list-style: none;
    }

    .nav__list li a {
        text-decoration: none;
        color: black;
    }

    .close {
        align-self: flex-start;
    }
    .nav__list li a:hover {
        background-color: oklch(0.75 0.0502 205.73);
    }
    .search-icon {
        margin-right: 50px;
    }
</style>
<script>
    const $nav = document.querySelector('.nav');
    const $open = document.querySelector('.open');
    const $close = document.querySelector('.close');

    $open?.addEventListener('click', () => {
        $nav?.classList.add('visible');
    });

    $close?.addEventListener('click', () => {
        $nav?.classList.remove('visible');
    });
</script>
