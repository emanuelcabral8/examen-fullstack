---
const { image, title, year, userRating, review, username, date, rating } =
    Astro.props;
import '../styles/theme.css';
---

<article class="card">
    <figure class="movie-image">
        <img src={image} />
    </figure>
    <div class="info">
        <section class="title">
            <h2>{title}</h2>
        </section>
        <p class = "year">{year}</p>
        <p class = "rating">Calificación: ⭐ {userRating} (promedio: {rating})</p>
    </div>
    <section class="review">
        <p>{review}</p>
    </section>

    <section class="username">
        <a href="#">{username}</a>
    </section>
    <time datetime={date}>{date}</time>
</article>

<style>
    *,
    *::before,
    *::after {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    html {
        font-size: 16px;
    }

    body {
        min-height: 100vh;
        line-height: 1.5;
        font-family: 'Roboto', sans-serif;
        background-color: var(--color-beige);
    }

    img,
    picture,
    video,
    canvas,
    svg {
        display: block;
        max-width: 100%;
        border-radius: 8px;
    }

    input,
    button,
    textarea,
    select {
        font: inherit;
    }
    .card {
        background-color: var(--color-white);
        display: grid;
        grid-template-columns: 1fr 1fr 1fr 1fr;
        grid-template-rows: auto auto auto;
        gap: 0.5rem;
        border-radius: 8px;
        padding: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.15);
        
    }
    .info {
        grid-column: 2/5;
        margin-left: 10px;
    }
    .review {
        grid-row: 2;
        grid-column: 1/5;
    }
    time {
        grid-row: 3;
        grid-column: 3/5;
        justify-self: end;
        align-self: end;
        
    }

    .username a {
        color: var(--color-light-blue);
        font-weight: 700;
    }
    .year,.rating{
        opacity: 0.7;
    }
    h2 {
        color: var(--color-dark-blue);
    }
</style>
