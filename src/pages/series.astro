---
import Layout from '../layouts/layout.astro';
import seriesData from '../data/seriesData.js';
import '../styles/theme.css';
---

<Layout title="Series ‚Äì FilmRush">
  <section style="text-align: center; margin-bottom: 2rem;">
    <h1>Las mejores series de todos los tiempos! üì∫</h1>
  </section>

<section style="margin-top: 3rem;" id="series">
    <div id="seriesContainer">
      {seriesData.map((serie, i) => (
        <div class="series" data-index={i}>
          <img src={serie.image} alt={`${serie.title} Image`} />
          <div class="series__content">
            <h2>{serie.title}</h2>
            <p>Puntuaci√≥n: {serie.overallRating}‚≠ê</p>
            <p>Temporadas: {serie.seasons}</p>
            <input class="add__to__list" type="button" value="Agregar a mi lista" />
          </div>
        </div>
      ))}
    </div>
</section>

<section id="list">
      <h2>Mi lista</h2>
      <ul></ul>
      <input id="delete__button" type="button" value="Borrar">
</section>
  <script type="module">
    import '/src/scripts/lists.js';
  </script>

<style>
    #seriesContainer {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    padding: 20px;
    margin: 0 auto; 
    }

    .series {
    background-color: var(--color-dark-red);
    padding: 15px;
    border-radius: 8px;
    box-shadow: 0 2px 4px var(--color-black);
    text-align: center;
    transition: transform 0.3s ease;
    }

    .series:hover {
     transform: scale(1.05);
    }

    .series img {
    width: 120px;
    height: 160px;
    object-fit: cover;
    margin-bottom: 10px;
    border-radius: 8px;
    }

    .series h2 {
    font-size: 18px;
    margin: 10px 0;
    color: var(--color-beige);
    }

    .series p {
    font-size: 14px;
    color: var(--color-beige);
    margin-bottom: 10px;
    }

    .series input[type="button"] {
    padding: 8px 12px;
    background: var(--color-light-blue);
    color: var(--color-black);
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.2s ease;
    }

    .series input[type="button"]:hover {
    background-color: var(--color-beige);
    }
    #list {
    border: 1px solid var(--color-ligth-blue);
    border-radius: 8px;
    background: var(--color-dark-red);
    box-shadow: 0 4px 8px var(--color-black);
    padding: 20px;
    max-width: 400px;
    margin: 20px auto;
    }

    #list ul {
      list-style: none;
      padding: 0;
      margin: 0 0 10px 0;
      color: var(--color-beige)
    }

    #list input[type="button"] {
      padding: 10px 15px;
      margin-right: 5px;
      color: var(--color-black);
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.2s ease;
    }

    #list #delete__button {
      background: var(--color-light-blue);
    }

    #list #delete__button:hover {
      background: var(--color-beige);
    }
    
    #list h2{
      color: var(--color-beige);
    }

  </style>

</Layout>