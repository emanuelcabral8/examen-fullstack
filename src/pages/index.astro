<script>
  document.addEventListener("DOMContentLoaded", () => {
    const carousel = document.getElementById('cartelera-carousel');
    if (!carousel) {
      console.warn("‚ùå No se encontr√≥ el carrusel");
      return;
    }

    console.log("‚úÖ Carrusel listo");

    let scrollPos = 0;
    const itemWidth = 260; // ajust√° si tus im√°genes tienen otro tama√±o
    const intervalTime = 2500;

    setInterval(() => {
      scrollPos += itemWidth;

      if (scrollPos >= carousel.scrollWidth - carousel.clientWidth) {
        scrollPos = 0;
      }

      carousel.scrollTo({
        left: scrollPos,
        behavior: 'smooth'
      });
    }, intervalTime);
  });
</script>

